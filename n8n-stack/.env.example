# ===========================================
#  CẤU HÌNH MÔI TRƯỜNG CHO N8N-STACK
#  Copy file này thành .env và điền thông tin
# ===========================================

# ===========================================
#  POSTGRESQL DATABASE
# ===========================================
POSTGRES_DB=n8n
POSTGRES_SCHEMA=public
POSTGRES_NON_ROOT_USER=lequyet_n8n
POSTGRES_NON_ROOT_PASSWORD=123456

# ===========================================
#  N8N CONFIGURATION
# ===========================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# ===========================================
#  TIMEZONE
# ===========================================
GENERIC_TIMEZONE=Asia/Ho_Chi_Minh

# ===========================================
#  REDIS QUEUE
# ===========================================
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_DB=0
QUEUE_BULL_REDIS_PASSWORD=your_redis_password_here
REDIS_PASSWORD=your_redis_password_here
EXECUTIONS_MODE=queue
QUEUE_BULL_REDIS_TIMEOUT=20000

# ===========================================
#  N8N ADVANCED SETTINGS
# ===========================================
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_ENFORCE_CACHE_PERMISSIONS=true
N8N_DISABLE_CACHE=false

NODE_OPTIONS=--max-old-space-size=2048
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_ENCRYPTION_KEY=your_encryption_key_here_min_10_chars
N8N_SECURE_COOKIE=false
N8N_LOG_LEVEL=info
N8N_MAX_UPLOAD_SIZE=16
NODE_ENV=production
DEBUG=false

# ===========================================
#  TELEGRAM NOTIFICATIONS (Optional)
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ===========================================
#  AUTO UPDATE
# ===========================================
N8N_AUTO_UPDATE_CHECK=false
