# ==========================================
# N8N TEST ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and update values

# ==========================================
# DOMAIN & SSL CONFIGURATION
# ==========================================
N8N_DOMAIN=n8n-test.vietqr.vn
SSL_EMAIL=admin@vietqr.vn

# ==========================================
# N8N CONFIGURATION
# ==========================================
N8N_VERSION=latest
N8N_ENCRYPTION_KEY=your-super-secret-encryption-key-min-32-chars-long
N8N_JWT_SECRET=your-jwt-secret-key-for-user-management

# ==========================================
# POSTGRESQL CONFIGURATION
# ==========================================
POSTGRES_DB=n8n_test
POSTGRES_USER=n8n_test_user
POSTGRES_PASSWORD=your-strong-postgres-password-here

# ==========================================
# REDIS CONFIGURATION
# ==========================================
REDIS_PASSWORD=your-strong-redis-password-here

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================
TIMEZONE=Asia/Ho_Chi_Minh

# ==========================================
# BACKUP CONFIGURATION (Optional)
# ==========================================
BACKUP_RETENTION_DAYS=7
BACKUP_CRON_SCHEDULE=0 2 * * *

# ==========================================
# TELEGRAM NOTIFICATIONS (Optional)
# ==========================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ==========================================
# MONITORING CONFIGURATION
# ==========================================
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true

# ==========================================
# LOAD TESTING CONFIGURATION
# ==========================================
LOAD_TEST_CONCURRENT_WORKFLOWS=50
LOAD_TEST_HEAVY_WORKFLOWS=10
LOAD_TEST_DURATION_MINUTES=30
